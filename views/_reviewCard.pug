mixin reviewCard(project)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src='/img/logo-round.png' alt=`${project.manager.name}`)
      h6.reviews__user= project.manager.name
    p.reviews__text= `${project.startDate.toLocaleString('en-us', {month: 'long', day: 'numeric', year: 'numeric'})}: ${project.jobType}.`
