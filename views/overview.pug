extends base

block content 
  main.main 
    .card-container 

      each store in stores
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              - if(store.retailer === "Circle K")
                img.card__picture-img(src=`/img/circle-k-logo.png`, alt=`${store.retailer} - ${store.storeNumber}`)
              - if(store.retailer === "Loves")
                img.card__picture-img(src=`/img/loves.png`, alt=`${store.retailer} - ${store.storeNumber}`)
            h3.heading-tertiary
              span= store.storeNumber 

          .card__details
            h4.card__sub-heading= store.retailer
            p.card__text= `${store.streetAddress}, ${store.city}, ${store.state} ${store.zipCode}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-globe')
              span= `Business Unit - \n${store.businessUnit}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-phone-call')
              span= `phone: ${store.phoneNumber}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
                -if(store.totalDoors)  
                  span= `${store.totalDoors} doors`
                -if(!store.totalDoors)  
                  span Need update for total doors
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `Scheduled ${store.projects.length} times`

          .card__footer
            p
              span.card__footer-value $297
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value 4.9
              | 
              span.card__footer-text rating (21)
            a.btn.btn--green.btn--small(href=`/store/${store.slug}`) Details

